task 'stuff' on ['jumpbox'] {
    exec { 'set-crypto-policy':
    command => '/usr/bin/do_something'
    unless  => "/usr/bin/test-the-thing"
    on_success => {
        exec { 'followup':
        command     => '/usr/bin/do-the-next-thing'
      }
    }
    on_failure => {
         exec { 'fix_something':
        command     => '/usr/bin/fix_script'
      }
    }
  }
}