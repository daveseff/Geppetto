node 'jumpbox' {
  connection  => local
  environment => 'nonprod'
  domain_fqdn => 'RACQGROUP.LOCAL'
  domain_short => 'RACQGROUP'
  register_account => 'svc_aws_domainjoin'
  createcomputer   => 'OU=Servers,DC=example,DC=com'
  register_password => { aws_secret => 'AD_JOIN', key => 'register_password' }
}

include 'includes/packages.fops'
include 'includes/mounts.fops'
include 'includes/users.fops'
include 'includes/keys.fops'
include 'includes/active_directory.fops'
