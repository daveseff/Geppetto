node 'local' {
  connection  => local
  environment => 'local'
}

task 'bootstrap' on ['local'] {
  package { ['git',]:
    ensure => present
  }

  service { 'sshd':
    enabled => true
    state   => running
  }

  file { '/tmp/forgeops-motd':
    ensure  => present
    mode    => '0644'
    template => 'examples/templates/motd.tmpl'
  }
}

task 'cleanup' on 'local' {
  file { '/tmp/obsolete.txt':
    ensure => absent
  }
}
